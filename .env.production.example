# Production Environment Variables for Vercel
# Copy this file and fill in the actual values in Vercel Dashboard

# Database
# For Vercel Postgres: automatically provided
# For external DB: postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=

# Authentication
# Generate with: openssl rand -base64 32
AUTH_SECRET=
BETTER_AUTH_URL=https://your-domain.vercel.app

# Clerk Authentication (if using Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# External APIs
MISTRAL_API_KEY=
YOUTUBE_API_KEY=

# Application
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# Monitoring (optional)
SENTRY_DSN=
VERCEL_ANALYTICS_ID=